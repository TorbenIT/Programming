package prog1.lektion12.lists;

public class Fruit {

	private Fruit next;
	
	private String name;
	
	
	
  // Konstruktor
	public Fruit(String n) {
	
		this.name = n;
	}
	
	
	
	
  // GETTER---SETTER
	public Fruit getNext() { return next; }
	
	public void setNext(Fruit f) { this.next = f; }
	
	public String getName() { return name; }

	public void setName(String na) { this.name = na; }

  // Methoden
	public boolean hasNext() { 
		if (next == null) 
			return false;
		else
			return true;
	}
	
	@Override
	public String toString() { return name; }
	
}
