package prog1.klausur;

public class BruttoNetto {

	public static double berechneNettopreis(double br, double satz) {
	
		double net = br - satz * (int)br;
		
		return net;
	}
	
	public static void main(String[] args) {
	
		double result = berechneNettopreis(2.07, 0.07);
		
		System.out.printf("%.2f", result);
	}
}
